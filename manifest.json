 {
    "manifest_version": 3,
    "name": "BrickBuddy",
    "description": "BrickBuddy makes your orders of LEGO parts on Bricklink much easier checking what items you are still missing from your Wanted List",
    "version": "1.0.1",
    "icons": {
        "16": "images/BB_logo16.png",
        "19": "images/BB_logo19.png",
        "38": "images/BB_logo38.png",
        "48": "images/BB_transparent.png",
        "128": "images/BB_logo128.png"
    },
    "action" : {
        "default_icon" : "images/BB_transparent.png",
        "default_popup" : "main.html"
    },
    "author": {
        "name": "Matteo Sperati",
        "email": "brickbuddyinfo@gmail.com"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}
